<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Activity.MainActivity"
    android:onClick="StartConnectivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SubmitButton"
        android:id="@+id/SubmitButton"
        android:layout_marginTop="152dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="StartConnectivity" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/InputData"
        android:layout_alignParentTop="true"
        android:layout_marginTop="73dp"
        android:layout_alignRight="@+id/SubmitButton"
        android:layout_alignEnd="@+id/SubmitButton"
        android:layout_alignLeft="@+id/SubmitButton"
        android:layout_alignStart="@+id/SubmitButton" />
</RelativeLayout>
